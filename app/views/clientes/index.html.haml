- title "Listado de Clientes"

%table.main_table
  %th Rut
  %th Password
  %th Nombre
  %th Apellidos
  %th Dirección
  %th Código Teléfono
  %th Numero Teléfono
  %th Email
  - @clientes.each do |cliente|
    %tr
      %td= cliente.rut
      %td= cliente.password
      %td= cliente.nombre.titleize
      %td= cliente.apellidos.titleize
      %td= cliente.direccion.titleize
      %td= cliente.cod_fono
      %td= cliente.num_fono
      %td= cliente.email
      //%td= link_to "#{categoria.productos.length}", [categoria, :productos]
      %td= link_to "Editar", [:edit, cliente]
      %td= link_to "Eliminar", cliente, :method => :delete, :confirm =>'¿Está seguro?'
%p= link_to "Nuevo Cliente", [:new,:cliente]
