- title "Perfil del vendedor"
= form_for @vendedor, :url => { :action => "update_perfil" } do |f|
  #form
    %table
      %tr
        %td
        %td
          = render "shared/error_messages", :target => @vendedor
      %tr
        %td.label= f.label :nombre, 'Nombre'
        %td= @vendedor.nombre + " " + @vendedor.apellidos
      %tr
        %td.label= f.label :rut, 'RUT'
        %td= @vendedor.rut.to_s + "-" + @vendedor.dv
      %tr
        %td.label= f.label :password, 'Contraseña*'
        %td= f.password_field :password
      %tr
        %td.label= f.label :password_confirma, 'Confirmación contraseña*'
        %td= f.password_field :password_confirma
      %tr
        %td
        %td.hint
          Contraseña de acceso al sistema
      %tr
        %td
          %td
            %hr
      %tr
        %td.label= f.label :direccion, 'Dirección'
        %td= @vendedor.direccion
      %tr
        %td.label= f.label :cod_fono, 'Número Teléfonico'
        %td= @vendedor.cod_fono.to_s + "-" + @vendedor.num_fono.to_s
      %tr
        %td.label= f.label :email, 'Correo Electrónico'
        %td= f.text_field :email
      %tr
        %td
          %td.hint
            %hr
            (*) Datos Obligatorios
            %hr
      %tr
        %td
          %td
            = f.submit 'Enviar'
            &nbsp;
            = link_to 'Cancelar', :home
